mixin button(text, href, variant)
  - var btnClass = variant === 'primary' ? 'btn btn--primary' : variant === 'secondary' ? 'btn btn--secondary' : 'btn'
  a(href=href class=btnClass)= text

mixin dynamicTitle(tag, text, className)
  #{tag}(class=`dynamic-title ${className}`)= text

mixin featureCard(icon, title, description)
  .feature-card
    .feature-card__icon
      img(class=icon src=`/images/${icon}.svg` alt=title)
    h3.feature-card__title= title
    p.feature-card__description= description

