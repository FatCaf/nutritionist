mixin blogCard(image, category, title, description, author, authorImage, date, likes, comments)
  article.blog-card
    .blog-card__image
      img(src=image alt=title)
    .blog-card__content
      span.blog-card__category= category
      h3.blog-card__title= title
      p.blog-card__description= description
      .blog-card__meta
        .blog-card__author
          img.blog-card__author-image(src=authorImage alt=author)
          span.blog-card__author-name= author
        +blogCardControls()

mixin testimonialCard(quote, image, author)
  .testimonial-card
    .testimonial-card__quote
      img.icon-quote(src='/images/quote.svg' alt='Quote')
    p.testimonial-card__text= quote
    .testimonial-card__author
      img.testimonial-card__author-image(src=`/images/${image}.png` alt=author)
      span.testimonial-card__name= author

mixin pricingCard(plan, price, period, features, featured)
  .pricing-card(class=featured ? 'pricing-card--featured' : '')
    h3.pricing-card__plan= plan
    .pricing-card__price
      span.pricing-card__currency $
      span.pricing-card__amount= price
      span.pricing-card__period= '/' + period
    ul.pricing-card__features
      each feature in features
        li.pricing-card__feature= feature
    +button('Choose Plan', '#', featured ? 'primary' : 'secondary')

mixin sectionHeader(title, description)
  .section-header
    h2.section-header__title= title
    if description
      p.section-header__description= description

mixin navLink(text, href, active)
  li.nav__item
    a.nav__link(href=href class=active ? 'nav__link--active' : '')= text

mixin socialLink(icon, href)
  a.social-link(href=href target="_blank" rel="noopener")
    i(class=icon)

mixin teamMember(name, role, imageSrc)
  .team-member-card
    .team-member-card__image
      img(src=imageSrc alt=name)
    .team-member-card__info
      h3.team-member-card__name= name
      p.team-member-card__role= role
mixin processStep(number, title, description)
  .process-step
    .process-step__number= number
    .process-step__content
      h3.process-step__title= title
      p.process-step__description= description

mixin cta(title, description, buttonText, buttonHref)
  .cta-section
    .cta-section__content
      h2.cta-section__title= title
      p.cta-section__description= description
    +button(buttonText, buttonHref, 'primary')

mixin pageHeader(title, description, buttons)
  .page-header(class=!buttons ? 'page-header--no-nav' : '')
    .page-header__content
      .page-header__image
        img(src='/images/page-header-bg.png' alt='Header Background')
      .page-header__icon
        img(src='/images/page-header-icon.svg' alt='Header Icon')
      h1.page-header__title= title
      p.page-header__description= description
    
    if buttons
      .page-header__buttons-container
        .page-header__buttons
          each btn, index in buttons
            button.page-header__button(class=index === 0 ? 'page-header__button--active' : '')= btn
mixin storyCard(image, title, text, date, isReversed)
  .story-card(class=isReversed ? 'story-card--reversed' : '')
    .story-card__image
      img(src=image alt=title)
    .story-card__content
      +dynamicTitle('h3', title, 'story-card__title')
      p.story-card__text= text
      p.story-card__date= date
      
mixin numberedFeatureCard(number, icon, title, description)
  .process-card
    .process-card__number= number
    +featureCard(icon, title, description)

mixin blogPageCard(category, image, title, description)
        article.blog-page-card
          .blog-page-card__header
             +dynamicTitle('p', category, 'blog-page-card__category')
          .blog-page-card__image
            .blog-page-card__image-wrapper
              img(src=`/images/${image}.png` alt=title)
          .blog-page-card__content
            .blog-page-card__text
               h3.blog-page-card__title= title
               p.blog-page-card__description= description
            +button('Read More', '#', 'primary')

mixin contactItem(text, additionalClass)
  .contact-item(class=additionalClass)
    .contact-item__icon
      block
    .contact-item__content
      span= text